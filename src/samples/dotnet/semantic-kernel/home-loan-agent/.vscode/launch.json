{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Home Loan Agent - Single Question",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/HomeLoanAgent.dll",
            "args": ["--question", "What documents do I need for a conventional loan?"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Home Loan Agent - Interactive",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/HomeLoanAgent.dll",
            "args": ["--interactive"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}
