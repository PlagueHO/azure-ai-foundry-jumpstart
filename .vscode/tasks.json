{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Ruff Check",
            "type": "shell",
            "command": "python -m ruff check src/",
            "group": "test",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Python Linting",
            "type": "shell",
            "command": "pylint",
            "args": [
                "src/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$python"]
        },
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "command": "pytest",
            "args": [
                "tests/"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$python"]
        },
        {
            "label": "Run Mypy Type Checks",
            "type": "shell",
            "command": "mypy",
            "args": [
                "src/"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$python"]
        }
    ]
}
