{
    "version": "2.0.0",
    "tasks": [
        // Build/Lint tasks
        {
            "label": "Run Ruff Check",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "ruff", "check", "src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "ruff", "check", "src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": { "id": "check" },
            "presentation": { "reveal": "always" },
            "problemMatcher": []
        },
        {
            "label": "Run Flake8 Linting",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "flake8", "src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "flake8", "src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": { "id": "check" },
            "problemMatcher": ["$python"],
            "presentation": { "reveal": "always" }
        },
        {
            "label": "Run Python Linting",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "pylint", "src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "pylint", "src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "icon": { "id": "tools" },
            "problemMatcher": ["$python"]
        },
        {
            "label": "Run Mypy Type Checks",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "mypy", "src/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "mypy", "src/"]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": { "id": "check" },
            "problemMatcher": ["$python"]
        },

        // Test tasks
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "pytest", "tests/"],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": ["-m", "pytest", "tests/"]
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "icon": { "id": "beaker" },
            "problemMatcher": ["$python"]
        }
    ]
}
